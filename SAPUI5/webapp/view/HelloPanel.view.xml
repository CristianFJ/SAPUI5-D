<mvc:View controllerName="dtt.SAPUI5.controller.HelloPanel" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" displayBlock="true"> 
    <Panel id="_IDGenPanel1" headerText="{i18n>helloPanel}" class="sapUIResponsiveMargin" width="auto">
    <content>
        <Button id="_IDGenButton1" text="{i18n>showHelloButtonText}" press=".onShowHello" class="sapUiSmallMarginEnd">
        </Button>
        <Input id="_IDGenInput1" value="{/recipient/name}"
            valueLiveUpdate="true"
            width="60%">
        </Input>
        <Text id="_IDGenText1" text="hello{/recipient/name}" class="sapUiSmallMargin boldElements sapthemeHighlight-asColor"/>
    </content>
    </Panel>

    <core:Fragment fragmentName ="dtt.SAPUI5.view.Form01" type="XML">
    </core:Fragment>
</mvc:View>