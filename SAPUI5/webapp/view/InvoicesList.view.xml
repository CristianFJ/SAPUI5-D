<mvc:View xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" controllerName="dtt.SAPUI5.controller.InvoicesList">
    <List id="_IDGenListI" 
        headerText="{i18n>invoiceListTitle}" 
        class="sapUiResponsiveMargin" 
        width="auto" 
        items="{northwind>/Invoices}">
        <headerToolbar>
            <Toolbar id="_IDGenToolbar1">
                <Title id="_IDGenTitle00" text="{i18n>invoicesListTitle}"/>
                <ToolbarSpacer id="_IDGenToolbarSpacer1"/>
                <SearchField id="_IDGenSearchField" width="50%" search=".onFilterInvoices"/>
            </Toolbar>
        </headerToolbar>
        <items>
            <ObjectListItem
                id="_IDGenObjectListItemO"
                title="{northwind>Quantity}x{northwind>ProductName}"
                number="{parts:[{path:'northwind>ExtendedPrice'},{path:'Currency>/usd'}],
                            type:'sap.ui.model.type.Currency', formatOptions:{showMeasure:false}}"
                numberUnit="{Currency>/usd}"
                numberState="{=${northwind>ExtendedPrice} > 50 ? 'Success' : 'Error'}"
                type="Navigation"
                press="navigateToDetails">
                <firstStatus>
                    <!--ObjectStatus id="_IDGenObjectStat" text="{invoices>Status}"/-->
                    <ObjectStatus id="_IDGenObjectStatus" text="{path:'northwind>Status',
                     formatter:'.formatter.invoiceStatus'}"/>
                </firstStatus>
            </ObjectListItem>
                
        </items>
    </List>
</mvc:View>
